<window id="121">
		<defaultcontrol>2</defaultcontrol>
		<include>dialogeffect</include>
		<controls>
				<control type="image">
						<description>background image</description>
						<left>0</left>
						<top>0</top>
						<width>720</width>
						<height>480</height>
						<colordiffuse>E0000000</colordiffuse>
						<texture>background diffuse.png</texture>
				</control>
				<control type="group">
						<top>0</top>
						<left>-50</left>
						<control type="image">
								<description>background image</description>
								<left>150</left>
								<top>50</top>
								<width>530</width>
								<height>400</height>
								<colordiffuse>menu_back_image</colordiffuse>
								<texture border="20,20,20,20">menu_back.png</texture>
						</control>
						<control type="label" id="2">
								<description>heading label</description>
								<left>150</left>
								<top>60</top>
								<width>530</width>
								<height>50</height>
								<align>center</align>
								<aligny>center</aligny>
								<font>size_50</font>
								<textcolor>menu_header_label</textcolor>
						</control>
						<control type="grouplist" id="5">
								<description>control area</description>
								<left>150</left>
								<top>120</top>
								<width>531</width>
								<height>295</height>
								<onleft>9000</onleft>
								<onright>9000</onright>
								<onup>9000</onup>
								<ondown>9000</ondown>
								<itemgap>-1</itemgap>
						</control>
						<control type="button" id="7">
								<description>Default Button</description>
								<left>0</left>
								<top>0</top>
								<include>MenuButtonCommonValues</include>
						</control>
						<control type="radiobutton" id="8">
								<description>Default RadioButton</description>
								<left>0</left>
								<top>0</top>
								<include>MenuButtonCommonValues</include>
						</control>
						<control type="spincontrolex" id="9">
								<description>Default spincontrolex</description>
								<left>0</left>
								<top>0</top>
								<include>MenuButtonCommonValues</include>
								<reverse>yes</reverse>
						</control>
						<control type="image">
								<left>135r</left>
								<top>100</top>
								<width>22</width>
								<height>22</height>
								<texture>scroll-up.png</texture>
								<colordiffuse>menu_header_label</colordiffuse>
								<animation type="Conditional" condition="System.IdleTime(1)" loop="true" reversable="false">
										<effect type="slide" start="0,0" end="0,-12" time="1000" tween="cubic" easing="inout" delay="3000" />
										<effect type="slide" start="0,0" end="0,12" time="1000" tween="cubic" easing="inout" delay="3500" />
								</animation>
						</control>
						<control type="image">
								<left>135r</left>
								<top>60r</top>
								<width>22</width>
								<height>22</height>
								<texture>scroll-down.png</texture>
								<colordiffuse>menu_header_label</colordiffuse>
								<animation type="Conditional" condition="System.IdleTime(1)" loop="true" reversable="false">
										<effect type="slide" start="0,0" end="0,12" time="1000" tween="cubic" easing="inout" delay="3000" />
										<effect type="slide" start="0,0" end="0,-12" time="1000" tween="cubic" easing="inout" delay="3500" />
								</animation>
						</control>
				</control>
		</controls>
</window>