<window id="35">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50</views>
	<controls>
		<include>CommonBackground</include>
		<control type="group">
			<include>ViewVisibleEffect</include>
			<include file="Viewtype_GameSavesView.xml">GameSavesView</include>
			<!-- view id = 50 -->
		</control>
		<control type="group">
			<left>0</left>
			<top>45</top>
			<animation effect="slide" reversible="true" start="-300,0" end="0,0" time="100">Visible</animation>
			<animation effect="slide" reversible="true" start="0,0" end="-300,0" time="100">Hidden</animation>
			<visible allowhiddenfocus="true">ControlGroup(9000).HasFocus</visible>
			<control type="group" id="9000">
				<control type="image">
					<description>background image</description>
					<left>0</left>
					<top>0</top>
					<width>230</width>
					<height>45</height>
					<texture border="8">subback.png</texture>
				</control>
				<control type="button" id="3">
					<description>Sort by button</description>
					<left>0</left>
					<top>0</top>
					<width>230</width>
					<include>ButtonCommonValues</include>
					<label>103</label>
					<onleft>50</onleft>
					<onright>4</onright>
					<onup>50</onup>
					<ondown>50</ondown>
				</control>
				<control type="togglebutton" id="4">
					<description>Sort asc</description>
					<left>200</left>
					<top>13</top>
					<label>-</label>
					<onleft>3</onleft>
					<onright>50</onright>
					<onup>50</onup>
					<ondown>50</ondown>
				</control>
			</control>
		</control>
		<control type="image">
			<left>20</left>
			<top>5</top>
			<width>40</width>
			<height>35</height>
			<aspectratio>keep</aspectratio>
			<texture>icon_addons.png</texture>
		</control>
		<control type="label">
			<description>Header label</description>
			<left>70</left>
			<top>5</top>
			<width>700</width>
			<height>35</height>
			<align>left</align>
			<aligny>center</aligny>
			<font>size_23</font>
			<textcolor>white</textcolor>
			<label>$LOCALIZE[20323]</label>
		</control>
	</controls>
</window>