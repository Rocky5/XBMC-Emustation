<window id="2006">
	<defaultcontrol>-</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>Window_OpenClose_Animation</include>
		<control type="visualisation" id="2">
			<description>visualisation</description>
			<left>0</left>
			<top>0</top>
			<width>720</width>
			<height>480</height>
		</control>
		<control type="group">
			<!--<visible>!System.IdleTime(10)</visible>-->
			<animation effect="fade" time="500">Visible</animation>
			<animation effect="fade" time="300">Hidden</animation>
			<control type="image">
				<description>media info background image</description>
				<left>0</left>
				<top>390</top>
				<width>720</width>
				<height>90</height>
				<texture>black-back.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>365</top>
				<width>720</width>
				<height>20</height>
				<texture>black-back.png</texture>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" delay="5000" start="100" end="0" time="200" condition="Visualisation.Locked">Conditional</animation>
				<visible>Visualisation.Locked</visible>
			</control>
			<control type="label">
				<left>170</left>
				<top>365</top>
				<label>-</label>
				<align>left</align>
				<label>[UPPERCASE][COLOR=orange]($LOCALIZE[20166])[/COLOR][/UPPERCASE] - $LOCALIZE[13388]: $INFO[Visualisation.Preset]</label>
				<font>size_14</font>
				<animation effect="fade" delay="0" start="0" end="100" time="100" condition="Visualisation.Locked">Conditional</animation>
				<animation effect="fade" delay="5000" start="100" end="0" time="200" condition="Visualisation.Locked">Conditional</animation>
				<visible>Visualisation.Locked</visible>
			</control>
			<control type="image">
				<left>0</left>
				<top>385</top>
				<width>720</width>
				<height>5</height>
				<colordiffuse>orange</colordiffuse>
				<texture>background diffuse.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>Visualisation.Locked</visible>
			</control>
			<control type="image">
				<description>cover image</description>
				<left>10</left>
				<top>330</top>
				<width>150</width>
				<height>150</height>
				<info>MusicPlayer.cover</info>
				<aspectratio aligny="bottom" align="left">keep</aspectratio>
				<fadetime>500</fadetime>
			</control>
			<control type="image">
				<left>240</left>
				<top>100</top>
				<width>250</width>
				<height>250</height>
				<texture>music_controls.png</texture>
				<aspectratio>keep</aspectratio>
				<colordiffuse>10FFFFFF</colordiffuse>
				<visible>!Player.Paused</visible>
			</control>
			<control type="image">
				<left>240</left>
				<top>100</top>
				<width>250</width>
				<height>250</height>
				<texture>music_controls_alt.png</texture>
				<aspectratio>keep</aspectratio>
				<colordiffuse>10FFFFFF</colordiffuse>
				<visible>Player.Paused</visible>
			</control>
			<control type="progress">
				<description>Progressbar</description>
				<left>10</left>
				<top>470</top>
				<width>150</width>
				<height>10</height>
				<info>Player.Progress</info>
			</control>
			<control type="label">
				<left>170</left>
				<top>390</top>
				<width>500</width>
				<height>25</height>
				<label>[COLOR=white]Artist:[/COLOR] $INFO[MusicPlayer.Artist]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>size_18</font>
				<textcolor>grey2</textcolor>
			</control>
			<control type="label">
				<left>170</left>
				<top>410</top>
				<width>500</width>
				<height>25</height>
				<label>[COLOR=white]Song:[/COLOR] $INFO[MusicPlayer.Title]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>size_18</font>
				<textcolor>grey2</textcolor>
			</control>
			<control type="label">
				<left>170</left>
				<top>430</top>
				<width>350</width>
				<height>25</height>
				<label>[COLOR=white]Album:[/COLOR] $INFO[MusicPlayer.Album]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>size_18</font>
				<textcolor>grey2</textcolor>
			</control>
			<control type="label">
				<left>170</left>
				<top>450</top>
				<width>925</width>
				<height>25</height>
				<label>$LOCALIZE[209] : $INFO[MusicPlayer.offset(1).Artist,, - ]$INFO[MusicPlayer.offset(1).Title]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>size_18</font>
				<textcolor>white</textcolor>
			</control>
			<control type="label">
				<left>20r</left>
				<top>440</top>
				<width>300</width>
				<height>25</height>
				<label>$INFO[MusicPlayer.Time]$INFO[Player.Duration, / ]</label>
				<align>right</align>
				<aligny>center</aligny>
				<font>size_30</font>
				<textcolor>white</textcolor>
			</control>
			<control type="label">
				<left>10r</left>
				<top>465</top>
				<width>300</width>
				<height>25</height>
				<label>$INFO[musicplayer.Playlistposition,$LOCALIZE[554]: ]$INFO[musicplayer.Playlistlength, / ]</label>
				<align>right</align>
				<aligny>center</aligny>
				<font>size_18</font>
				<textcolor>white</textcolor>
			</control>
			<control type="label">
				<left>350</left>
				<top>475</top>
				<width>300</width>
				<height>25</height>
				<label/>
				<align>center</align>
				<aligny>center</aligny>
				<font>size_18</font>
				<textcolor>white</textcolor>
				<scroll>true</scroll>
				<visible>MusicPlayer.HasNext</visible>
			</control>
		</control>
	</controls>
</window>