<!-- Background Images -->
<control type="image">
	<description>background</description>
	<left>0</left>
	<top>0</top>
	<width>1280</width>
	<height>720</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FF97999B</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- Top Underlay Image -->
<control type="image">
	<description>top bar</description>
	<left>0</left>
	<top>0</top>
	<width>1280</width>
	<height>115</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FFC8CACB</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- System Log -->
<control type="image">
	<description>logo</description>
	<left>30</left>
	<top>20</top>
	<width>490</width>
	<height>72</height>
	<aspectratio align="left">keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/logo.png</texture>
</control>
<!-- Bottom Underlay Image -->
<control type="image">
	<left>0</left>
	<top>47r</top>
	<width>1280</width>
	<height>47</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FFC5C6C7</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- Fanart -->
<control type="largeimage">
	<left>0</left>
	<top>115</top>
	<width>1280</width>
	<height>558</height>
	<aspectratio>scale</aspectratio>
	<colordiffuse>10FFFFFF</colordiffuse>
	<texture>[Media_Path]\screenshots\$INFO[Container(9000).listitem.thumb]</texture>
	<fadetime>FanartCrossfadeTime</fadetime>
	<include>EmulatorScrollFade</include>
	<visible>[Fanart_Toggle]</visible>
</control>
<!-- Context Button Overlay -->
<include>ContextButtonsEmulators</include>
<include>ContextButtonsVideo</include>
<!-- CD Image not used -->
<control type="largeimage.">
	<left>25</left>
	<top>228</top>
	<width>156</width>
	<height>156</height>
	<aspectratio>stretch</aspectratio>
	<texture>[Media_Path]\cd\$INFO[Container(9000).listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
	<include>EmulatorScrollFade</include>
	<visible>!Player.HasVideo</visible>
	<animation type="WindowOpen" reversible="false">
		<effect type="fade" start="0" end="100" time="500" delay="500"/>
		<effect type="slide" start="0" end="55" time="500" delay="500"/>
	</animation>
	<animation type="conditional" condition="!Container(9000).OnPrevious + !Container(9000).OnNext" reversible="false">
		<effect type="slide" start="0" end="55" time="500" delay="500"/>
		<effect type="fade" start="0" end="100" time="500" delay="500"/>
	</animation>
	<animation effect="fade" start="100" end="0" time="0">WindowClose</animation>
	<animation center="auto" condition="true" effect="rotate" end="-360" loop="true" reversible="true" time="7000">conditional</animation>
</control>
<!-- Thumbnail Image -->
<control type="image">
	<left>32</left>
	<top>159</top>
	<width>250</width>
	<height>225</height>
	<aspectratio>keep</aspectratio>
	<texture background="true" fallback="layouts/art/no_thumbnail.png">[ArtworkFolder]$INFO[Container(9000).listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
	<include>EmulatorScrollFade</include>
	<animation effect="fade" reversable="true" start="100" end="1" time="0" condition="Player.HasVideo">conditional</animation>
</control>
<!-- Full name, publisher info eg... -->
<control type="label">
	<left>302</left>
	<top>157</top>
	<height>227</height>
	<width min="200" max="435">auto</width>
	<font>size_18</font>
	<textcolor>FF3C3D3E</textcolor>
	<align>left</align>
	<aligny>top</aligny>
	<autoscroll delay="10000" time="1000" repeat="10000" condition="Container(9000).HasFocus">Conditional</autoscroll>
	<label>[UPPERCASE]$INFO[Container(9000).ListItem.Label2][/UPPERCASE]</label>
	<include>EmulatorScrollFade</include>
</control>
<!-- Game description (Synopsis) -->
<control type="textbox">
	<left>32</left>
	<top>424</top>
	<width>723</width>
	<height>210</height>
	<font>size_17</font>
	<textcolor>FF3C3D3E</textcolor>
	<align>left</align>
	<scrolltime>200</scrolltime>
	<autoscroll delay="10000" time="1000" repeat="10000" condition="Container(9000).HasFocus">Conditional</autoscroll>
	<label>[UPPERCASE]$INFO[Container(9000).ListItem.ActualIcon][/UPPERCASE]</label>
	<include>EmulatorScrollFade</include>
</control>
<!-- Video Window -->
<control type="videowindow">
	<description>video preview window</description>
	<left>32</left>
	<top>159</top>
	<width>250</width>
	<height>225</height>
	<aspectratio>keep</aspectratio>
	<animation effect="fade" start="0" end="100" delay="100" time="200" condition="Player.HasVideo">conditional</animation>
</control>
<!-- List Control -->
<control type="list" id="9000">
	<left>787</left>
	<top>159</top>
	<width>460</width>
	<height>482</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>9000</onup>
	<ondown>9000</ondown>
	<viewtype label="List">List</viewtype>
	<preloaditems>5</preloaditems>
	<itemlayout height="30" width="460">
		<control type="label">
			<left>14</left>
			<top>1</top>
			<width>432</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FF282A2B</textcolor>
			<selectedcolor>FF3C3D3E</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
			<scroll>false</scroll>
		</control>
	</itemlayout>
	<focusedlayout height="30" width="460">
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>460</width>
			<height>31</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FF34383B</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<left>14</left>
			<top>1</top>
			<width>432</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FF77BA3F</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</focusedlayout>
	<!-- content list this label is required -->
</control>