<!-- Background Images -->
<control type="image">
	<description>background</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>720</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FF97999B</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- Top Underlay Image -->
<control type="image">
	<description>top bar</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>115</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FFC8CACB</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- System Log -->
<control type="image">
	<description>logo</description>
	<posx>30</posx>
	<posy>20</posy>
	<width>490</width>
	<height>72</height>
	<aspectratio align="left">keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/logo.png</texture>
</control>
<!-- Bottom Underlay Image -->
<control type="image">
	<posx>0</posx>
	<posy>47r</posy>
	<width>1280</width>
	<height>47</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FFC5C6C7</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- Context Button Overlay -->
<include>ContextButtonsXBE</include>
<include>ContextButtonsVideo</include>
<!-- Fanart Image -->
<control type="image">
	<description>right bar</description>
	<posx>0</posx>
	<posy>115</posy>
	<width>1280</width>
	<height>558</height>
	<aspectratio scalediffuse="true">scale</aspectratio>
	<colordiffuse>10FFFFFF</colordiffuse>
	<texture background="true" diffuse="background diffuse.png">$INFO[listitem.path,,fanart.jpg]</texture>
	<fadetime>FanartCrossfadeTime</fadetime>
	<visible>!Player.HasVideo</visible>
</control>
<!-- thumbnail image -->
<control type="image">
	<posx>727</posx>
	<posy>159</posy>
	<width>450</width>
	<height>450</height>
	<aspectratio>keep</aspectratio>
	<texture background="false" fallback="layouts/art/no_thumbnail.png">$INFO[listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
</control>
<!-- Video Window Background -->
<control type="image">
	<description>video preview window background</description>
	<posx>0</posx>
	<posy>115</posy>
	<width>1280</width>
	<height>558</height>
	<aspectratio>stretch</aspectratio>
	<texture>thumbnf.png</texture>
	<visible>Player.HasVideo</visible>
</control>
<!-- Video Window -->
<control type="videowindow">
	<description>video preview window</description>
	<posx>0</posx>
	<posy>115</posy>
	<width>1280</width>
	<height>558</height>
	<aspectratio>keep</aspectratio>
	<animation effect="fade" start="0" end="100" delay="800" time="600">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" delay="0" time="100">WindowClose</animation>
</control>
<!-- List Control -->
<control type="list" id="50">
	<visible allowhiddenfocus="true">!Player.HasVideo</visible>
	<posx>32</posx>
	<posy>159</posy>
	<width>560</width>
	<height>450</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>50</onup>
	<ondown>50</ondown>
	<viewtype label="List">List</viewtype>
	<scrolltime>150</scrolltime>
	<preloaditems>2</preloaditems>
	<itemlayout height="30" width="560">
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>532</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FF282A2B</textcolor>
			<selectedcolor>FF3C3D3E</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</itemlayout>
	<focusedlayout height="30" width="560">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>560</width>
			<height>31</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FF34383B</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>532</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FF77BA3F</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>5</width>
			<height>30</height>
			<aspectratio>stretch</aspectratio>
			<texture>$INFO[listitem.overlay]</texture>
		</control>
	</focusedlayout>
</control>